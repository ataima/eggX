<?xml version="1.0"?>
<egg>
  <project>
    <name>bc</name>
    <download>check</download>
    <remote>
      <method>wget</method>
      <url>http://ftp.gnu.org/gnu/bc</url>
      <file>bc-1.07.1.tar.gz</file>
    </remote>
    <build>
      <step id="1">
        <silent>yes</silent>
        <threads>8</threads>
        <configure>
          <extra id="0">--prefix=$DEPLOY</extra>
          <extra id="1">--target=$CROSS</extra>
	  <extra id="2">--with-readline</extra>
        </configure>
        <make id="0">
          <priority>170</priority>
          <rule id="0">
            <name>all</name>
            <thread>1</thread>
          </rule>
          <rule id="1">
            <name>install-strip</name>
            <thread>1</thread>
          </rule>
        </make>
      </step>
    </build>
  </project>
</egg>
