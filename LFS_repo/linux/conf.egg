<?xml version="1.0"?>
<egg>
	<project>
		<name>linux</name>
		<download>check</download>		
		<remote>
			<method>wget</method>
			<url>https://cdn.kernel.org/pub/linux/kernel/v4.x</url>
			<file>linux-4.10.9.tar.xz</file>	
			<key>
				<url>https://cdn.kernel.org/pub/linux/kernel/v4.x</url>
				<file>linux-4.10.9.tar.sign</file>			
			</key>
		</remote>	
		<build>
			<step id="0">
				<priority>9</priority>
				<name> prepare_gcc_native</name>
				<prefix>usr</prefix>
				<arch>x86_64</arch>
				<cross>native</cross>	
				<silent>yes</silent>
				<threads>8</threads>			
				<make>
					<rule id="0">
						<pre id="0">
							
							<code>mkdir -p $BUILDS/$PROJECT/temp</code>
						</pre>
						<name> INSTALL_HDR_PATH=$BUILDS/$PROJECT/temp headers_install</name>
						<thread> 1 </thread>
						<post id="0">
							
							<code>cp -r $BUILDS/$PROJECT/temp/include/* $DEPLOY/include </code>
						</post>						
						<post id="1">
							
							<code>rm -rf  $BUILDS/$PROJECT/temp </code>
						</post>						
					</rule>
				</make>
			</step>
		</build>
	</project>
</egg>
